<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		 
		android:id="@+id/llplaylist"
		android:background="@color/darkgrey"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal">
			<TextView 
				android:text="Station Play Lists"
				android:gravity="center_horizontal"
				android:textColor="@color/white"
				android:layout_width="fill_parent"
    			android:layout_height="wrap_content" />
				<ImageView
					android:id="@+id/npr"
    				android:src="@drawable/npr2"
    				android:gravity="center_vertical"
    				android:layout_height="wrap_content" android:layout_width="wrap_content"/>
    				<RelativeLayout  
						android:orientation="vertical"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">
    					<TextView  
							android:id="@+id/poprefresh"
							android:text=""
							android:gravity="center_vertical"
							android:background="@drawable/updatebannerblue"
							android:textColor="@color/white"
							android:layout_width="fill_parent"
    						android:layout_height="wrap_content" />

    					<ImageView
    						android:id="@+id/process"
    						android:src="@drawable/processing2"
    						android:layout_alignRight="@id/poprefresh"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"/>
						</RelativeLayout>
						<LinearLayout
							android:orientation="horizontal"
    						android:layout_width="fill_parent"
    						android:layout_height="wrap_content"
    						android:gravity="center_horizontal">
    						<ImageButton
    							android:id="@+id/playstatus"
    							android:src="@drawable/selplay"
    							android:background="@android:color/transparent"
    							android:layout_width="wrap_content"
    							android:layout_height="wrap_content"/>
    						<TextView  
								android:id="@+id/playingstation"
								android:text=""
								android:gravity="center_vertical"
								android:textColor="@color/white"
								android:layout_width="wrap_content"
    							android:layout_height="wrap_content" />
    						<TextView  
								android:id="@+id/playingcontent"
								android:text=""
								android:gravity="center_vertical"
								android:scrollHorizontally="true"
								android:textColor="@color/white"
								android:layout_width="fill_parent"
    							android:layout_height="wrap_content" />
						</LinearLayout>
						<ListView
							android:id="@+id/playlist"
    						android:layout_width="fill_parent"
    						android:layout_height="fill_parent" 
    						/>
	</LinearLayout>
